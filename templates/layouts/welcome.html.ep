<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %> &middot; 열린옷장</title>
    <link rel="stylesheet" href="/assets/components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/components/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/assets/components/opencloset.css/dist/css/opencloset.min.css">
    <link rel="stylesheet" href="/assets/dist/css/screen.min.css">
    <link rel="stylesheet" href="/assets/dist/css/welcome.min.css">
    %= include 'partials/config';
  </head>
  <body>
    <nav class="navbar navbar-default navbar-oc">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="<%= url_for('/welcome') %>">
            <img alt="열린옷장" src="/resource/project/opencloset_CI.png">
          </a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a href="<%= url_for('/signup') %>">
                <i class="fa fa-user-plus fa-fw" aria-hidden="true"></i>
                회원가입
              </a>
            </li>
            <li>
              <a href="<%= url_for('index') %>">
                <i class="fa fa-sign-in fa-fw" aria-hidden="true"></i>
                로그인
              </a>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <div class="container">
      <div id="content">
        %= content
      </div>
    </div>
    %= footer
    <script src="/assets/components/jquery/dist/jquery.min.js"></script>
    <script src="/assets/components/bootstrap/dist/js/bootstrap.min.js"></script>
    % if ($config->{ga}{enable} && $config->{ga}{code}) {
      % my $ga_code = $config->{ga}{code};
      <!-- Global site tag (gtag.js) - Google Analytics -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=<%= $ga_code %>"></script>
      <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', '<%= $ga_code %>');
      </script>
    % }
  </body>
</html>
